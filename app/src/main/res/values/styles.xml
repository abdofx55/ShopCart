<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        # Required for animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.App</item>
        # Required.
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="first_button">
        <item name="android:layout_width">245dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="second_button" parent="first_button">
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="third_button" parent="first_button">
        <item name="android:layout_width">326dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="menu_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryText</item>


    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/segoeui</item>
    </style>

    <style name="home_second_header" parent="Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="home_see_all" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textColor">@color/gradientStartColor</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Label" parent="Text">
        <item name="android:textColor">@color/third_color</item>
        <item name="android:textSize">@dimen/edit_text_label_text_size</item>
    </style>

    <style name="Value" parent="Text">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/edit_text_text_size</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/edit_text_text_size</item>
        <item name="backgroundTint">@color/divider_color</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHighlight">@color/divider_color</item>
    </style>

    <style name="OnboardingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/onboarding_txt_body_size</item>
        <item name="android:layout_marginLeft">@dimen/onboarding_txt_body_margin</item>
        <item name="android:layout_marginRight">@dimen/onboarding_txt_body_margin</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
