<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".Activities.MainActivity.Fragments.BestSellFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/best_img_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/back_button_margin_left_2"
            android:layout_marginLeft="@dimen/back_button_margin_left_2"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="12dp"
            android:paddingTop="19dp"
            android:paddingRight="12dp"
            android:paddingBottom="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_button_dark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/best_img_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="14dp"
            app:layout_constraintBottom_toTopOf="@+id/best_img_back"
            app:layout_constraintEnd_toStartOf="@+id/best_img_cart"
            app:layout_constraintTop_toBottomOf="@+id/best_img_back"
            app:srcCompat="@drawable/ic_search_dark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/best_img_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/best_img_search"
            app:layout_constraintEnd_toStartOf="@+id/best_guideline_end"
            app:layout_constraintTop_toBottomOf="@+id/best_img_search"
            app:srcCompat="@drawable/ic_shopping_cart" />


        <TextView
            android:id="@+id/best_txt_title"
            style="@style/title"
            android:text="@string/best_title"
            app:layout_constraintStart_toStartOf="@+id/best_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/best_img_back" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/best_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/best_guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/best_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/best_txt_title" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/best_guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/guideline_margin_2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/best_guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/guideline_margin_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>